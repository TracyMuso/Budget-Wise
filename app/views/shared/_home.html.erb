<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="d-flex content-center mx-auto my-4 text-center mb-4">
    <h1 class="font-bold text-4xl">Welcome <%= current_user.name %> !</h1><br>
    <em class="p-2 my-2 ">You are signed in!</em>
  </div>

  <div id="groups" class="min-w-full text-center my-2">
  <%= button_to 'Go to categories', groups_path,  method: :get,  class: 'btn my-3 rounded-lg bg-blue-500 w-75 p-3' %><br>
  <%= button_to 'Log out', destroy_user_session_path,  method: :delete, class: ' btn my-3 rounded-lg bg-gray-500 w-75 p-3 text-white' %><br>
  </div>
</div>
