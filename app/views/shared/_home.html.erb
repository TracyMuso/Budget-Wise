<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="d-flex content-center mx-auto text-center mb-4">
    <h1 class="font-bold text-4xl">Welcome <%= current_user.name %> !</h1><br>
    <em class="p-2 my-2 ">You are signed in!</em>
  </div>

  <div id="groups" class="min-w-full text-center">
  <%= button_to 'Go to categories', groups_path,  method: :get,  class: 'btn bg-blue-500 w-75 mt-5 p-3' %>
  <%= button_to 'Log out', destroy_user_session_path,  method: :delete, class: ' btn bg-gray-500 w-75 mt-2 p-3 text-white' %>
  </div>
</div>
