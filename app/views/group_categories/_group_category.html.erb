<div id="<%= dom_id group_category %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Group:</strong>
    <%= group_category.group_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Category:</strong>
    <%= group_category.category_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this group category", group_category, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this group category', edit_group_category_path(group_category), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
